{{#if taxons }}
    {{#each taxons}}
      <li data-taxon-id="{{id}}" data-taxon-taxonomy-id="{{taxonomy_id}}">
        <div  class="sortable-handle">
          {{#if (isRootTaxon) }}{{else}}<i class="fa fa-arrows"></i>{{/if}}
          {{name}}
          <div class="actions right">
            <a href="#" class="js-taxon-add-child fa fa-plus icon_link no-text"></a>
            <a href="{{admin_url}}/categories/{{taxonomy_id}}/catalogs/{{id}}/edit" class="fa fa-edit icon_link no-text"></a>
            <a href="#" class="js-taxon-delete fa fa-trash icon_link no-text"></a>
          </div>
        </div>
        <ul>
          {{> taxons/_tree }}
        </ul>
      </li>
    {{/each}}
{{else}}
    {{#each sub_properties}}
      <li data-sub-property-id="{{id}}" data-sub-property-property-id="{{property_id}}">
        <div  class="sortable-handle">
          {{#if (isRootSubProperty) }}{{else}}<i class="fa fa-arrows"></i>{{/if}}
          {{name}}
          <div class="actions right">
            <a href="#" class="js-sub-property-add-child fa fa-plus icon_link no-text"></a>
            <a href="{{admin_url}}/properties/{{property_id}}/sub_properties/{{id}}/edit" class="fa fa-edit icon_link no-text"></a>
            <a href="#" class="js-sub-property-delete fa fa-trash icon_link no-text"></a>
          </div>
        </div>
        <ul>
          {{> taxons/_tree }}
        </ul>
      </li>
    {{/each}}
{{/if}}
